<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PICE-CAR</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_Navbar")
    <div class="container body-content">
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <br />
                <div class="list-group">
                    <a href="@Url.Action("Index", "Profile")" id="iInfoId" class="list-group-item">Profile</a>
                    <a href="@Url.Action("PersonalInfo", "Profile")" id="pInfoId" class="list-group-item">Personal Information</a>
                    <a href="@Url.Action("Membership", "Profile")" id="mInfoId" class="list-group-item">Membership Information</a>
                    <a href="@Url.Action("Education", "Profile")" id="eduInfoId" class="list-group-item">Educational Background</a>
                    <a href="@Url.Action("Profession", "Profile")" id="profInfoId" class="list-group-item">Professional Background</a>
                </div>
            </div>

            <div class="col-xs-12 col-md-8">
                @RenderBody()
            </div>
        </div>

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - PICE-CAR</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
