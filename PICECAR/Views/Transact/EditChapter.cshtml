@model PICECAR.Models.Chapter

@{
    ViewBag.Title = "EditChapter";
}

<br />
<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h3 class="panel-title">Change Chapter</h3>
    </div>

    <div class="panel-body">
        <br />

        @using (Html.BeginForm("EditChapter", "Transact", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.CurrentChapter, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class=" col-md-7">
                    @Html.EditorFor(model => model.CurrentChapter, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CurrentChapter, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewChapter, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class=" col-md-7">
                    @Html.EditorFor(model => model.NewChapter, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewChapter, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <div class="col-md-offset-3 col-md-7">
                    <input type="submit" value="Send Request" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
