@using PICECAR.Models

@{
    ViewBag.Title = "GenerateSeminar";
}

<br />
<div class="panel panel-default">
    <div class="panel-heading text-center">
        @Html.ActionLink("Back", "Seminar", "Reports", null, new { @class = "btn btn-default btn-xs btn-info pull-left" })
        <h3 class="panel-title">List of Seminar</h3>
    </div>


    <div class="panel-body">
        @Html.ValidationSummary()
        <table class="table table-responsive">
            <tr>
                <th>Code</th>
                <th>Title</th>
                <th colspan="2">Date</th>
                <th></th>
            </tr>

            @foreach (var item in (List<Seminar>)ViewData["FilteredSeminars"])
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Title</td>
                    <td>@item.DateFrom</td>
                    <td>@item.DateTo</td>
                    <td>@Html.ActionLink("Show attendees", "ShowAttendees", "Reports", new { Id = item.SeminarId }, new { @class = "btn btn-info btn-xs" })</td>
                </tr>
            }
        </table>
    </div>
</div>